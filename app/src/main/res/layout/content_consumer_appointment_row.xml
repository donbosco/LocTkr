    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="24.0dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/transaction_row_height"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />

            <LinearLayout
                android:layout_width="60.0dip"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/consumer_appointment_status"
                    android:layout_width="60.0dip"
                    android:layout_height="40.0dip"
                    android:layout_margin="8.0dip"
                    android:src="@drawable/wait_conf" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250.0dip"
            android:layout_height="@dimen/transaction_row_height"
            android:gravity="left"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="5.0dip"
                android:paddingRight="4.0dip">

                <TextView
                    android:id="@+id/consumer_appointment_service"
                    style="@style/grid_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/consumer_appointment_address"
                    style="@style/grid_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/consumer_appointment_service"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/consumer_appointment_phonenumber"
                    style="@style/waiting_time_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/consumer_appointment_address" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />
        </LinearLayout>

        <TextView
            android:id="@+id/consumer_appointment_waitTime"
            style="@style/waiting_time_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>